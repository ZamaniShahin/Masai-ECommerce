<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Theme/img/favicon.png">
    <link rel="icon" type="image/png" href="~/Theme/img/favicon.png">
    <title>مَسای شاپ </title>
    <meta name="description" content="مَسای شاپ ">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />


    <!-- CSS Files -->
    <link href="~/Theme/fonts/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Theme/fonts/font-awesome/css/solid.css" rel="stylesheet" />
    <link href="~/Theme/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Theme/css/main_ui.css" rel="stylesheet" />
    <link href="~/Theme/css/icon.css" rel="stylesheet" />
    <link href="~/Theme/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="~/Theme/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Theme/css/main.css" rel="stylesheet" />
    <link href="~/Theme/css/style.css" rel="stylesheet" />
    @RenderSection("CSS",false)
</head>

<body class="index-page sidebar-collapse">
    <div class="top-section fullscreen-container">
        <img src="~/Theme/img/banner_img/bg_top.jpg" class="h-100">
    </div>
    <div class="wrapper default">
        <!--start pc header -->
        <header class="Masai-header default">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-4 col-5">
                        <div class="logo-area default">
                            <a href="index.html">
                                <img src="~/Theme/img/logo.png" alt="" />
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-5 col-sm-8 col-7">
                        <div class="search-area default">
                            <form method="get" asp-page="/Search" class="search">
                                <input type="search" placeholder="جستجو" name="value" id="value" />
                                <button type="submit">
                                    <img src="~/Theme/img/search.png" alt="" />
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-12">
                        <div class="user_head">
                            @if (@* !AuthHelper.IsAuthenticated() *@ true)
                            {
                                <a asp-page="/Register" class="iconhead">
                                    <i class="fa fa-user-large font-20" aria-hidden="true"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Login" asp-page-handler="Logout" class="iconhead">
                                    <i class="fa fa-user-large font-20" aria-hidden="true"></i>
                                </a>
                            }

                        </div>
                        <div class="cart dropdown masai_dropdown">
                            <span class="divider"></span>

                            <a href="#"
                               class="dropdown-toggle iconhead"
                               data-toggle="dropdown"
                               id="navbar_a">
                                <i class="fa fa-cart-arrow-down font-20"
                                   aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbar_a">
                                <ul class="m_cart-list">
                                    <li class="m_cart_li1">
                                        <a href="single-product.html" class="m_cart-item">
                                            <i class="fa fa-times" aria-hidden="true"></i>

                                            <div class="m_cart-item-content">
                                                <div class="m_cart-item-image">
                                                    <img src="~/Theme/img/product_img/p_6.jpg" />
                                                </div>
                                                <div class="m_cart-item-details">
                                                    <div class="m_cart-item-title">
                                                        ساعت هوشمند امیزفیت
                                                    </div>
                                                    <div class="m_cart-item-params">
                                                        <div class="m_cart-item-props">
                                                            <span>تعداد : 2</span>
                                                            <span>رنگ: سبز ارتشی</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="m_cart_li2">
                                        <a href="single-product.html" class="m_cart-item">
                                            <i class="fa fa-times" aria-hidden="true"></i>

                                            <div class="m_cart-item-content">
                                                <div class="m_cart-item-details">
                                                    <div class="m_cart-item-title">
                                                        شیائومی مدل Poco X4
                                                    </div>
                                                    <div class="m_cart-item-params">
                                                        <div class="m_cart-item-props">
                                                            <span>تعداد : 1</span>
                                                            <span>رنگ: مشکی</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="m_cart-item-image">
                                                    <img src="~/Theme/img/product_img/p_9.jpg" />
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                                <div class="m_cart-header">
                                    <div class="m_cart-total">
                                        <span>مجموع سبد:</span>
                                        <span> ۳۵,۲۵۳,۵۰۰</span>
                                        <span> تومان</span>
                                    </div>
                                </div>
                                <div class="btn_cart">
                                    <a href="cart.html" class="btn btn_sabad">مشاهده سبد</a>
                                    <a href="Final-payment.html"
                                       class="btn btn_pardakht btn-main-masai">پرداخت</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- end pc header -->
        @RenderBody()
        <footer class="main-footer default">
            <div class="back-to-top ">
                <a href="#">
                    <span class="icon"><i class="fa fa-chevron-up"></i></span> <span>
                        بازگشت بالا
                    </span>
                </a>
            </div>
            <!-- ! Start Our Services -->
            <div class="servicesbg">
                <div class="footer-services container  space-10">
                    <div class="row">
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-4.png" class="width-40" />
                            <span class="title-1 light-black">ضمانت اصل بودن</span>
                        </div>
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-1.png" class="width-40" />
                            <span class="title-1 light-black">پرداخت در محل</span>
                        </div>
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-2.png" class="width-40" />
                            <span class="title-1 light-black">ارسال سریع</span>
                        </div>
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-5.png" class="width-40" />
                            <span class="title-1 light-black">فرصت 7 روزه استرداد</span>
                        </div>
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-3.png" class="width-40" />
                            <span class="title-1 light-black">پشتیبانی تلفنی</span>
                        </div>
                        <div class="service-item col-2 contact-box text-center">
                            <img src="~/Theme/img/ico/png-7.png" class="width-40" />
                            <span class="title-1 light-black">هدیه نقدی</span>
                        </div>

                    </div>

                </div>
            </div>
            <!-- ! End Our Services -->
            <div class="container-fluid space-30 bg-map">

                <div class="footer-widgets container">
                    @await Component.InvokeAsync("Footer")
                </div>

            </div>
        </footer>
    </div>
    <!--    JS Files   -->
    <script src="~/Theme/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/core/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/bootstrap-switch.js"></script>
    <script src="~/Theme/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/jquery.sharrre.js" type="text/javascript"></script>
    <script src="~/Theme/js/now-ui-kit.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/countdown.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/owl.carousel.min.js" type="text/javascript"></script>
    <script src="~/Theme/js/plugins/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <!-- custom Js -->
    <script src="~/Theme/js/main.js" type="text/javascript"></script>
    @RenderSection("JS",false)
</body>
</html>